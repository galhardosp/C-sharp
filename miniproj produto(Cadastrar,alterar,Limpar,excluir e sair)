        private void TestarConexao()
        {
            SqlConnection conn = new SqlConnection(stringconexao);
            try
            {
                conn.Open();
                conn.Close();
            }

            catch (Exception ex)
            {
                MessageBox.Show("Erro: " + ex.ToString());
                Application.Exit();
            }
        }

